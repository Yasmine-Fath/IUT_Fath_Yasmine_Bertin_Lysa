<Window x:Class="Robot_interface_fath_bertin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Robot_interface_fath_bertin"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <GroupBox Header="Réception" Grid.Column="1" Grid.Row="0" Margin="5">
            <TextBox x:Name="textBoxReception" TextWrapping="Wrap" Text="" TextChanged="TextBox_TextChanged" IsReadOnly="True" AcceptsReturn="True"/>
        </GroupBox>
        <GroupBox Header="Émission" Grid.Column="0" Grid.Row="0" Margin="5">
            <TextBox x:Name="textBoxEmission" TextWrapping="Wrap" Text="" AcceptsReturn="True" PreviewKeyDown="TextBoxEmission_PreviewKeyDown"/>
        </GroupBox>
        <StackPanel  Orientation="Horizontal" Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Center">
           <Button x:Name="buttonEnvoyer" Grid.Column="1" Content="Envoyer" HorizontalAlignment="Left" Grid.Row="3" VerticalAlignment="Center" Width="100" Height="20" Click="buttonEnvoyer_Click" Margin="5" />
            <Button x:Name="buttonClear" Grid.Column="3" Content="Clear" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Center" Width="100" Height="20" Click="buttonClear_Click" Margin="5"/>
            <Button x:Name="buttonTest" Grid.Column="1" Content="Test" HorizontalAlignment="Left" Grid.Row="3" VerticalAlignment="Center" Width="100" Height="20" Click="buttonTest_Click"  Margin="5"/>
            <Button x:Name="buttonAuto" Grid.Column="1" Content="Auto" HorizontalAlignment="Left" Grid.Row="3" VerticalAlignment="Center" Width="100" Height="20" Click="buttonAuto_Click"  Margin="5"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.ColumnSpan="2">
            <GroupBox Header="Leds" Margin="5">
                <StackPanel Orientation="Vertical" >
                    <CheckBox x:Name="checkBoxLed1" Content="Led1" Margin="5"/>
                    <CheckBox Name="checkBoxLed2" Content="Led2" Margin="5" />
                    <CheckBox Name="checkBoxLed3" Content="Led3" Margin="5" />
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Télèmetres IR" Margin="5">
                <StackPanel Orientation="Vertical" Margin="5">
                    <TextBlock x:Name="TextBoxIRGauche" Text ="IR Gauche : " Margin="5"/>
                    <TextBlock x:Name="TextBoxIRCentre" Text="IR Centre : " Margin="5"/>
                    <TextBlock x:Name="TextBoxIRDroit" Text="IR Droit : " Margin="5"/>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Moteurs" Margin="5">
                <StackPanel Orientation="Vertical" Margin="5">
                    <TextBlock x:Name="TextBoxVitesseGauche" Text ="Vitesse Gauche : " Margin="5"/>
                    <TextBlock x:Name="TextBoxVitesseDroit" Text="Vitesse Droit : " Margin="5"/>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Mode" Margin="5">
                <StackPanel Orientation="Vertical" >
                    <CheckBox x:Name="checkBoxModeM" Content="Manuel" Margin="5"/>
                    <CheckBox x:Name="checkBoxModeA" Content="Auto" Margin="5"/>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Position" Margin="5">
                <StackPanel Orientation="Vertical" Margin="5">
                    <TextBlock x:Name="TextBoxXPosition" Text ="x : " Margin="5"/>
                    <TextBlock x:Name="TextBoxYPosition" Text="y : " Margin="5"/>
                    <TextBlock x:Name="TextBoxAnglePosition" Text="angle : " Margin="5"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>

    </Grid>
</Window>
